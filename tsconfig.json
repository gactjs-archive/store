{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "keyofStringsOnly": true, // Used to circumvent: "Type instantiation is excessively deep and possibly infinite".
    "downlevelIteration": true,
    "esModuleInterop": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"]
}
